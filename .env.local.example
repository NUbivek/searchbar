# Network Map API Keys
# ---------------------

# Together AI API Key (Required for LLM network search capability)
# Get your API key at https://together.ai
TOGETHER_API_KEY=your_together_api_key_here

# Social Media API Keys
# ---------------------

# LinkedIn API Credentials (Optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=${NEXT_PUBLIC_BASE_URL}/api/auth/linkedin/callback

# Frontend LinkedIn OAuth variables (needed for client-side auth flow)
NEXT_PUBLIC_LINKEDIN_CLIENT_ID=your_linkedin_client_id
NEXT_PUBLIC_LINKEDIN_REDIRECT_URI=${NEXT_PUBLIC_BASE_URL}/api/auth/linkedin/callback

# URLs for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_PRODUCTION_URL=https://research.bivek.ai

# Set this to true to use the production URL for OAuth callbacks even when developing locally
NEXT_PUBLIC_USE_PRODUCTION_CALLBACKS=false

# Twitter API Credentials (Optional)
TWITTER_CLIENT_ID=your_twitter_client_id       # Format like: QzU0a01zRS1CbW9oSXNSOTNZbGc6MTpjaQ
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_API_KEY=your_twitter_api_key          # Legacy v1 API key if you have it
TWITTER_API_SECRET=your_twitter_api_secret    # Legacy v1 API secret if you have it
TWITTER_REDIRECT_URI=${NEXT_PUBLIC_BASE_URL}/api/auth/twitter/callback

# Frontend Twitter OAuth variables (needed for client-side auth flow)
NEXT_PUBLIC_TWITTER_CLIENT_ID=your_twitter_client_id  # Same as TWITTER_CLIENT_ID above
NEXT_PUBLIC_TWITTER_REDIRECT_URI=${NEXT_PUBLIC_BASE_URL}/api/auth/twitter/callback


# Reddit API Credentials (Optional)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_REDIRECT_URI=${NEXT_PUBLIC_BASE_URL}/api/auth/reddit/callback

# If your application already has other API keys, keep them and add the new ones above
